{
  "name": "@bambeehr/pollen",
  "version": "0.1.0",
  "main": "./dist/pollen.common.js",
  "repository": "git://github.com/bambeehr/pollen.git",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "scripts": {
    "dev": "npm run storybook & npm run test:watch && fg",
    "prebuild": "rimraf dist",
    "build": "vue-cli-service build --target lib --name pollen src/main.js",
    "prepare": "npm run build",
    "lint": "vue-cli-service lint",
    "build:storybook": "build-storybook  --quiet",
    "lint:css": "stylelint './src/**/*.{vue, css}'",
    "storybook": "start-storybook -p 6006",
    "test": "jest",
    "test:generate-output": "jest --json --outputFile=.jest-test-results.json",
    "test:watch": "npm run test:generate-output -- --watch",
    "test:watchAll": "npm run test:generate-output -- --watchAll"
  },
  "dependencies": {
    "core-js": "^3.6.5",
    "lodash": "^4.17.15",
    "shortid": "^2.2.15",
    "vue": "^2.6.11",
    "vue-material-design-icons": "^4.7.1"
  },
  "devDependencies": {
    "@babel/core": "^7.10.1",
    "@storybook/addon-actions": "^5.3.19",
    "@storybook/addon-backgrounds": "^5.3.19",
    "@storybook/addon-docs": "^5.3.19",
    "@storybook/addon-jest": "^5.3.19",
    "@storybook/addon-knobs": "^5.3.19",
    "@storybook/addon-links": "^5.3.19",
    "@storybook/addon-storysource": "^5.3.19",
    "@storybook/addon-viewport": "^5.3.19",
    "@storybook/addons": "^5.3.19",
    "@storybook/vue": "^5.3.19",
    "@vue/cli-plugin-babel": "~4.4.0",
    "@vue/cli-plugin-eslint": "~4.4.0",
    "@vue/cli-service": "~4.4.0",
    "@vue/eslint-config-airbnb": "^5.0.2",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/test-utils": "^1.0.3",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.0.1",
    "babel-loader": "^8.1.0",
    "babel-preset-vue": "^2.0.2",
    "eslint": "^6.7.2",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-vue": "^6.2.2",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jest-serializer-vue": "^2.0.2",
    "lint-staged": "^10.2.6",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "stylelint": "^13.5.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-order": "^4.0.0",
    "vue-cli-plugin-tailwind": "~1.4.1",
    "vue-jest": "^3.0.5",
    "vue-svg-loader": "^0.16.0",
    "vue-template-compiler": "^2.6.11"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.vue": [
      "eslint --fix",
      "stylelint",
      "git add"
    ],
    ".js": [
      "eslint --fix",
      "git add"
    ]
  }
}
